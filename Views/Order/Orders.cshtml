@model IEnumerable<OrdersApp.Models.Order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>CreationDate</th>
            <th>ExpiredDate</th>
            <th>Customer</th>
            <th>Product</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.CreationDate</td>
            <td>@order.ExpiredDate</td>
            <td>@order.Customer.Fname @order.Customer.Lname</td>
            <td>@order.Product.Name</td>
            <td>@Html.ActionLink("Edit", "EditOrder", "Order", new { id = order.Id }, null)</td>
            <td>@Html.ActionLink("Delete", "DeleteOrder", "Order", new { id = order.Id }, null)</td>
        </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Add Order", "AddOrder", "Order")
